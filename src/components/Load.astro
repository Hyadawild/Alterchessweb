---
import "../styles/load.css";

---


<section id="pre" class="hero-gradient pt-24 pb-20 md:pt-32 md:pb-28 relative overflow-hidden">
  <div class="particles" id="particles"></div>

  <div class="max-w-6xl w-full mx-auto text-center mb-12 px-4 md:px-0">
    <!-- Title & Subtitle -->
    <h1 class="anime-title text-4xl md:text-6xl mb-6">Alter Chess</h1>
    <p class="text-xl md:text-2xl text-gray-300 mb-8">The epic checkmate begins in...</p>

    <!-- Countdown -->
    <div class="flex justify-center gap-4 mb-16 flex-wrap">
      <div class="countdown-box p-4 w-24 md:w-32">
        <div class="countdown-number" id="days">00</div>
        <div class="text-gray-400 uppercase text-sm">Days</div>
      </div>
      <div class="countdown-box p-4 w-24 md:w-32">
        <div class="countdown-number" id="hours">00</div>
        <div class="text-gray-400 uppercase text-sm">Hours</div>
      </div>
      <div class="countdown-box p-4 w-24 md:w-32">
        <div class="countdown-number" id="minutes">00</div>
        <div class="text-gray-400 uppercase text-sm">Minutes</div>
      </div>
      <div class="countdown-box p-4 w-24 md:w-32">
        <div class="countdown-number" id="seconds">00</div>
        <div class="text-gray-400 uppercase text-sm">Seconds</div>
      </div>
    </div>

    <!-- Notify Button -->
    <button class="btn-cta mb-16 text-lg md:text-xl inline-flex items-center justify-center mx-auto">
      <i class="fas fa-bell mr-2"></i> Notify Me on Release
    </button>

    <!-- Meet The Heroes -->
    <h2 class="text-3xl md:text-4xl font-bold mb-8">Meet The Heroes</h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      <!-- Character 1 -->
      <div class="character-card p-6 flex flex-col items-center bg-gray-900 rounded-lg shadow-lg">
        <img
          src="/pcry.png"
          alt="Kaito"
          class="character-image mb-4 rounded-md object-cover w-full h-64"
        />
        <h3 class="text-2xl font-bold mb-2">Rasyif Ibnu Hasri</h3>
        <div class="character-role mb-4 text-purple-400">The Light</div>
        <p class="text-gray-300 text-center">22.11.4710</p>
        <div class="mt-4 flex gap-2 flex-wrap justify-center">
          <span class="px-3 py-1 bg-purple-900 rounded-full text-xs">Agility</span>
          <span class="px-3 py-1 bg-blue-900 rounded-full text-xs">Hacking</span>
          <span class="px-3 py-1 bg-pink-900 rounded-full text-xs">Stealth</span>
        </div>
      </div>

      <!-- Character 2 -->
      <div class="character-card p-6 flex flex-col items-center bg-gray-900 rounded-lg shadow-lg">
        <img
          src="/pheobe.png"
          alt="Hyada"
          class="character-image mb-4 rounded-md object-cover w-full h-64"
        />
        <h3 class="text-2xl font-bold mb-2">Haydar Wildan Zacky</h3>
        <div class="character-role mb-4 text-red-400">The Light</div>
        <p class="text-gray-300 text-center">22.11.4689</p>
        <div class="mt-4 flex gap-2 flex-wrap justify-center">
          <span class="px-3 py-1 bg-red-900 rounded-full text-xs">Fire</span>
          <span class="px-3 py-1 bg-yellow-900 rounded-full text-xs">Barrier</span>
          <span class="px-3 py-1 bg-orange-900 rounded-full text-xs">Healing</span>
        </div>
      </div>

      <!-- Character 3 -->
      <div class="character-card p-6 flex flex-col items-center bg-gray-900 rounded-lg shadow-lg">
        <img
          src="/pheobe.png"
          alt="Ryuji"
          class="character-image mb-4 rounded-md object-cover w-full h-64"
        />
        <h3 class="text-2xl font-bold mb-2">Alvigo Wahyu Buana</h3>
        <div class="character-role mb-4 text-green-400">The Titan Warrior</div>
        <p class="text-gray-300 text-center">22.11.4737.</p>
        <div class="mt-4 flex gap-2 flex-wrap justify-center">
          <span class="px-3 py-1 bg-green-900 rounded-full text-xs">Strength</span>
          <span class="px-3 py-1 bg-gray-900 rounded-full text-xs">Defense</span>
          <span class="px-3 py-1 bg-indigo-900 rounded-full text-xs">Leadership</span>
        </div>
      </div>
    </div>

    <!-- Join Our Community -->
    <div class="mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Join Our Community</h2>
      <p class="text-xl text-gray-300 mb-6 max-w-2xl mx-auto">
        Be part of our growing community and get exclusive updates before the game launches!
      </p>
      <div class="flex justify-center gap-6 text-gray-300">
        <a href="#" class="social-icon text-2xl hover:text-blue-500 transition-colors duration-300"><i class="fab fa-discord"></i></a>
        <a href="#" class="social-icon text-2xl hover:text-blue-400 transition-colors duration-300"><i class="fab fa-twitter"></i></a>
        <a href="#" class="social-icon text-2xl hover:text-pink-500 transition-colors duration-300"><i class="fab fa-instagram"></i></a>
        <a href="#" class="social-icon text-2xl hover:text-red-600 transition-colors duration-300"><i class="fab fa-youtube"></i></a>
      </div>
    </div>
  </div>
</section>
