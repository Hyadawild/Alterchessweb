---
import "../styles/global.css";
//import HeroLogo from '19.png';

---

    <!-- Hero Section -->
    <section

      id="home"
      class="hero-gradient pt-24 pb-20 md:pt-32 md:pb-28 relative overflow-hidden "
      data-aos="zoom-in"
    >
      <div class="absolute inset-0 z-0 opacity-20">
        <div
          class="absolute inset-0 bg-[url('https://via.placeholder.com/1920x1080?text=Game+Background')] bg-cover bg-center parallax-bg"
        ></div>
        <div
          class="absolute inset-0 bg-gradient-to-b from-black via-transparent to-black"
        ></div>
      </div>

      <div class="max-w-7xl mx-auto px-8 sm:px-6 lg:px-8 min-h-250 flex items-center relative z-10">
        <div class="md:flex items-center">
          <div class="md:w-1/2 mb-12 md:mb-0">
            <h1 class="text-2xl md:text-6xl font-bold mb-6 glow-text ">
              <span class="typewriter">Alter Chess</span>
            </h1>
            <p class="text-xs sm:text-sm md:text-xl text-gray-300 mb-8 max-w-xs md:max-w-lg">
              A Unique Chess Experience, Choose your Arcane Master and fight together to win the sacred chess battle.
            </p>
            <div class="flex flex flex-col md:flex-row gap-4">
              <!-- Download Now button -->
              <a href="https://devhalu.itch.io/alterchess"  target="_blank">
              <button
                class="bg-gradient-to-r from-purple-600 to-blue-500 mb-3 hover:from-purple-700 hover:to-blue-600 text-white px-8 py-3 rounded-full font-bold transition-all duration-300 btn-hover-grow"
              >
             
                Download Now 
              </button>
              </a>

              <!-- Watch Trailer button -->
          <a href="#gameplay" rel="noopener noreferrer">
            <button
              class="bg-transparent border-2 border-purple-500  hover:bg-purple-900 hover:bg-opacity-30 text-white px-8 py-3 rounded-full font-bold transition-all duration-300 btn-hover-grow"
            >
              Watch Trailer <i class="fas fa-play ml-2"></i>
            </button>
          </a>
            </div>
            <div class="mt-8 flex items-center">
              <div class="flex -space-x-2">
                <img
                  class="inline-block h-10 w-10 rounded-full ring-2 ring-purple-600"
                  src="https://randomuser.me/api/portraits/women/12.jpg"
                  alt=""
                />
                <img
                  class="inline-block h-10 w-10 rounded-full ring-2 ring-purple-600"
                  src="https://randomuser.me/api/portraits/men/33.jpg"
                  alt=""
                />
                <img
                  class="inline-block h-10 w-10 rounded-full ring-2 ring-purple-600"
                  src="https://randomuser.me/api/portraits/women/45.jpg"
                  alt=""
                />
              </div>
              <p class="ml-6 text-sm text-gray-300">
                <span class="font-bold text-white">250K+</span> <br> players<br>
                pre-registered
              </p>
            </div>
          </div>
          <div class="md:w-1/2 ml-78 flex justify-end-safe scale-200 image-container perspective overflow-visible">
  <div id="carousel3d" class="relative w-[300px] h-[400px] transform-style preserve-3d transition-transform duration-1000 mx-auto ">
    <img src="19.png" alt="Character 1" class="carousel-img absolute w-full h-auto object-contain scale-500">
    <img src="13.png" alt="Character 2" class="carousel-img absolute w-full h-auto object-contain">
    <img src="20.png" alt="Character 3" class="carousel-img absolute w-full h-auto object-contain">
    </div>
  </div>

        </div>
      </div>
    </section>


    <script >
  const imgs = document.querySelectorAll('.carousel-img');
  const total = imgs.length;
  const radius = 200; // jarak rotasi
  let currIndex = 0;

  function rotateCarousel() {
    imgs.forEach((img, i) => {
      const angle = ((360 / total) * ((i - currIndex + total) % total));
      const rad = angle * (Math.PI / 180);
      const x = Math.sin(rad) * radius;
      const z = Math.cos(rad) * radius;

      img.style.transform = `translateX(${x}px) translateZ(${-z}px) rotateY(${angle}deg)`;
      img.style.zIndex = `${Math.round(1000 - Math.abs(angle))}`;
      img.style.opacity = angle === 0 ? 1 : 0.5;
      img.style.scale = angle === 0 ? 1.1 : 0.9;
    });
  }

  rotateCarousel();
  setInterval(() => {
    currIndex = (currIndex + 1) % total;
    rotateCarousel();
  }, 3000);
</script>
