---
import "../styles/global.css";
import HeroLogo from '../assets/api.png';
---

    <!-- Hero Section -->
    <section
      id="home"
      class="hero-gradient pt-24 pb-20 md:pt-32 md:pb-28 relative overflow-hidden"
    >
      <div class="absolute inset-0 z-0 opacity-20">
        <div
          class="absolute inset-0 bg-[url('https://via.placeholder.com/1920x1080?text=Game+Background')] bg-cover bg-center parallax-bg"
        ></div>
        <div
          class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-black"
        ></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="md:flex items-center">
          <div class="md:w-1/2 mb-12 md:mb-0">
            <h1 class="text-4xl md:text-6xl font-bold mb-6 glow-text">
              <span class="typewriter">Alter Chess</span>
            </h1>
            <p class="text-lg md:text-xl text-gray-300 mb-8 max-w-lg">
              Embark on an epic journey through shattered realms in this
              next-generation action RPG. Master elemental combat, uncover
              ancient mysteries, and shape the fate of a dying world.
            </p>
            <div class="flex flex-wrap gap-4">
              <button
                class="bg-gradient-to-r from-purple-600 to-blue-500 hover:from-purple-700 hover:to-blue-600 text-white px-8 py-3 rounded-full font-bold transition-all duration-300 btn-hover-grow"
              >
                Pre-Register Now
              </button>
              <button
                class="bg-transparent border-2 border-purple-500 hover:bg-purple-900 hover:bg-opacity-30 text-white px-8 py-3 rounded-full font-bold transition-all duration-300 btn-hover-grow"
              >
                Watch Trailer <i class="fas fa-play ml-2"></i>
              </button>
            </div>
            <div class="mt-8 flex items-center">
              <div class="flex -space-x-2">
                <img
                  class="inline-block h-10 w-10 rounded-full ring-2 ring-purple-600"
                  src="https://randomuser.me/api/portraits/women/12.jpg"
                  alt=""
                />
                <img
                  class="inline-block h-10 w-10 rounded-full ring-2 ring-purple-600"
                  src="https://randomuser.me/api/portraits/men/33.jpg"
                  alt=""
                />
                <img
                  class="inline-block h-10 w-10 rounded-full ring-2 ring-purple-600"
                  src="https://randomuser.me/api/portraits/women/45.jpg"
                  alt=""
                />
              </div>
              <p class="ml-4 text-sm text-gray-300">
                <span class="font-bold text-white">250K+</span> players
                pre-registered
              </p>
            </div>
          </div>
          <div class="md:w-1/2 flex justify-center">
            <img
              src={HeroLogo.src}
              alt="Main Character"
              class="w-full max-w-md floating"
            />
          </div>
        </div>
      </div>
    </section>
