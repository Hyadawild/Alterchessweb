---
const { character } = Astro.props;
import "../styles/global.css";
---

<div
  class="character-card bg-gray-800 bg-opacity-60 rounded-xl overflow-hidden glow-box group"
>
  <div class="relative h-full overflow-hidden">
    <img
  src={character.image}
  alt={character.name}
  class="character-image w-full h-full object-cover object-top transform transition-transform duration-500 group-hover:scale-110"
/>
  <div
    class="absolute inset-0 flex flex-col justify-end p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500 bg-gradient-to-t from-black/90 via-black/60 to-transparent z-10"
  >
    <h3 class="text-xl font-bold text-white">{character.name}</h3>
    <p class="text-purple-300 text-sm">{character.title}</p>
    <p class="text-gray-300 text-sm mt-2">{character.description}</p>
    <div class="flex justify-between text-xs mt-3">
      <span class="bg-purple-900 bg-opacity-50 px-2 py-1 rounded">{character.elementColor}</span>
      <span class="bg-blue-900 bg-opacity-50 px-2 py-1 rounded">{character.type}</span>
      <span class="bg-gray-700 px-2 py-1 rounded">{character.rating}</span>
    </div>
  </div>
</div>

<style>
  .character-card {
    transition: all 0.3s ease;
    position: center;
  }
  .character-card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 25px 50px -12px rgba(132, 59, 206, 0.25);
  }
</style>
