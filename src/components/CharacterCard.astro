---
const { character } = Astro.props;
import "../styles/global.css";
---

<div
  class="character-card bg-gray-800 bg-opacity-60 rounded-xl overflow-hidden glow-box hover:glow-box "
>
  <div class="relative center h-75 overflow-hidden">
    <img
      src={character.image}
      alt={character.name}
      class="md:w-fit md:h-auto md:object-fit"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent"></div>
    <div class="absolute bottom-0 left-0 p-4">
      <h3 class="text-xl font-bold text-white">{character.name}</h3>
      <p class="text-purple-300 text-sm">{character.title}</p>
    </div>
  </div>
  <div class="p-4">
    <p class="text-gray-300 text-sm mb-4">{character.description}</p>
    <div class="flex justify-between text-xs">
      <span class="bg-purple-900 bg-opacity-50 px-2 py-1 rounded">{character.elementColor}</span>
      <span class="bg-blue-900 bg-opacity-50 px-2 py-1 rounded">{character.type}</span>
      <span class="bg-gray-700 px-2 py-1 rounded">{character.rating}</span>
    </div>
  </div>
</div>

<style>
  .character-card {
    transition: all 0.3s ease;
    position: center;
  }
  .character-card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 25px 50px -12px rgba(132, 59, 206, 0.25);
  }
</style>
