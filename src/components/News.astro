---
// src/components/NewsSection.astro
import { news } from "../const/n_data.js";
import "../styles/global.css";
import NewsCard from "./Newscard.astro";
const showHorizontal = news.length > 3;
---

<section id="news" class="py-20 bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 glow-text">Latest News</h2>
        <p class="text-lg text-gray-400 max-w-3xl mx-auto">
          Stay updated with the latest developments and announcements.
        </p>
      </div>
  
      <div
        class:list={[showHorizontal ? "flex overflow-x-auto space-x-6" : "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"]}
        class="scrollbar-hide pb-2"
      >
        {news.map((item, index) => (
          <div class={showHorizontal ? "min-w-[300px] flex-shrink-0" : ""}>
            <NewsCard item={item} />
          </div>
        ))}
      </div>
  
      <div class="text-center mt-12">
        <button class="bg-transparent border-2 border-purple-500 hover:bg-purple-900 hover:bg-opacity-30 text-white px-8 py-3 rounded-full font-bold transition-all duration-300 btn-hover-grow">
          View All News <i class="fas fa-arrow-right ml-2"></i>
        </button>
      </div>
    </div>
  </section>
