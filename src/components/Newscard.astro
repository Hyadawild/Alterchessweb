---
// src/components/NewsCard.astro
const { item } = Astro.props;
---

<div class="bg-gray-800 rounded-xl overflow-hidden hover:glow-box transition-all duration-300 character-card">
  <div class="h-48 overflow-hidden">
    <img src={item.image} alt="News" class="w-full h-full object-cover" />
  </div>
  <div class="p-6">
    <div class="flex items-center text-sm text-gray-400 mb-2">
      <span>{item.date}</span>
      <span class="mx-2">â€¢</span>
      <span class="text-purple-300">{item.category}</span>
    </div>
    <h3 class="text-xl font-bold mb-3">{item.title}</h3>
    <p class="text-gray-300 text-sm mb-4">{item.description}</p>
    <a
      href={item.link}
      class="text-purple-400 hover:text-purple-300 text-sm font-medium flex items-center"
    >
      Read More <i class="fas fa-arrow-right ml-2"></i>
    </a>
  </div>
</div>
